{
  "info": {
    "_postman_id": "c3f2b4b8-8a7c-4c02-9f1b-7b6f9563d8c4",
    "name": "Demo API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Demo Spring Boot API: Product create, find all, and find by ID endpoints."
  },
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Wireless Mouse\",\n  \"description\": \"Ergonomic wireless mouse with USB receiver\",\n  \"price\": 29.99,\n  \"quantity\": 100,\n  \"category\": \"Electronics\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "description": "Creates a new product. Valid categories: Electronics, Clothing, Books, Home, Sports."
          },
          "response": []
        },
        {
          "name": "Find All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products?limit={{limit}}&offset={{offset}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                { "key": "limit", "value": "{{limit}}", "description": "Optional limit" },
                { "key": "offset", "value": "{{offset}}", "description": "Optional offset" }
              ]
            },
            "description": "Fetches a paginated list of products. Both limit and offset are optional."
          },
          "response": []
        },
        {
          "name": "Find Product By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            },
            "description": "Fetches a single product by its ID. Returns 404 if not found."
          },
          "response": []
        }
      ]
    }
  ],
  "event": [],
  "variable": [
    { "key": "limit", "value": "10" },
    { "key": "offset", "value": "0" },
    { "key": "productId", "value": "1" }
  ]
}
